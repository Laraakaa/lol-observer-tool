<UserControl x:Class="LoL_Observer_Tool.UI.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click" />
                <MenuItem Header="Settings" Click="MenuItem_Settings_Click" />
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Controller" Click="MenuItem_Options_Click" />
                <Separator />
                <MenuItem Header="Load profile" />
                <MenuItem Header="Save profile" />
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
