<UserControl x:Class="LoL_Observer_Tool.UI.Status.StatusOffline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoL_Observer_Tool.UI.Status"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Offline" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="Red" />
        <TextBlock TextWrapping="Wrap" Grid.Row="1" FontSize="18" HorizontalAlignment="Center">
            Currently not connected to League of Legends. Please make sure that the spectator mode is running and the Replay API is enabled.
            Find out how to enable <Hyperlink NavigateUri="https://developer.riotgames.com/replay-apis.html" RequestNavigate="Hyperlink_RequestNavigate">here</Hyperlink>.
        </TextBlock>
    </Grid>
</UserControl>
